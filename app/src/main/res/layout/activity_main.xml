<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activty.MainActivity">

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/malzemeciSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <Button
        android:id="@+id/zimmet_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zimmetle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="zimmetOnClick"
        >
    </Button>

    <Button
        android:id="@+id/btn_teslimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zimmet al"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="590dp" />


</androidx.constraintlayout.widget.ConstraintLayout>